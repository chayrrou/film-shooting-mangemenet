{% extends 'base.html.twig' %}

{% block title %}Realisateur index{% endblock %}

{% block body %}
<style>
    .table {
  width: 100%;
  border-collapse: collapse;
   background-color:   #FFFFFF;
  border: 1px solid #ccc;
  padding: 20px;
  box-shadow: -5px 5px 10px rgba(0,0,0,0.7),
              5px 5px 10px rgba(0,0,0,0.7);
}

.table th,
.table td {

  padding: 15px;
  text-align: center;
  border-bottom: 1px solid #ddd;
}

.table th {
  background-color: #f2f2f2;
}

.btn {
  display: inline-block;
  padding: 6px 12px;
  background-color: dodgerblue;
  color: white;
  text-decoration: none;
  border-radius: 15px;
  margin-right: 4px;
  width:100px;
  font-size:15px;
  margin:3%;
 
}

.btn:hover {
  background-color: blue;
  font-size:20px;
}

.btnAction{
     display: flex;
  justify-content: center;
  align-items: center;
}

h1{
    margin-top:5%;
    font-family: 'Nunito';
    font-size: 35px;
    margin-left:45%;
    padding-left:10px;
    border: 5px solid tomato;
    border-top: 0px;
    border-bottom: 0px;
    border-right: 0px;
    width:100%;
    color:white;
}
.buttonCreate {
    display: inline-block;
    padding: 10px 20px;
    background-color: tomato;
    color: white;
    text-decoration: none;
    border-radius: 20px;
    margin: 10px;
    font-family: 'Nunito';
    text-align:center;
    font-size:20px;
    width:20%
}
.buttonCreate :hover {
  background-color: #45a049;
}

.profile-image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  object-fit: cover;
}
</style>

<div style="margin-left:12%;">
    <h1>Realisateur </h1>
    <a style="margin-left:90%;box-shadow: -5px 5px 10px rgba(0,0,0,0.7),
              5px 5px 10px rgba(0,0,0,0.7);" href="{{ path('app_realisateur_new') }}" class="buttonCreate">Create Realisateur</a>
    <table  class="table" style="margin-top:3%; margin-left:15%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Nationalite</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for realisateur in realisateurs %}
            <tr>
                <td>{{ realisateur.id }}</td>
                <td>{{ realisateur.nom }}</td>
                <td>{{ realisateur.prenom }}</td>
                <td>{{ realisateur.nationalite }}</td>
                <td>
                    <img src={{asset('uploads/' ~ realisateur.photo)}} width="50%" class="profile-image"/>
                </td>
                <td>
                    <a href="{{ path('app_realisateur_show', {'id': realisateur.id}) }}"  class="btn">Show</a>
                    <a href="{{ path('app_realisateur_edit', {'id': realisateur.id}) }}"  class="btn">Edit</a>
                    {{ include('realisateur/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
</div>

{% endblock %}
