    <img src={{asset('media/societeProd.jpg')}}  style="width:300px;height:150px ; margin-left:15px ;margin-bottom:15px;margin-top:20px"/>
    {{ form_widget(form) }}
    <div class="div">
        <button class="btn">{{ button_label|default('Save') }}</button>
        <a class="btn" href="{{ path('app_societe_de_production_index') }}">Back to list</a>
    </div>
    {{ form_end(form) }}
