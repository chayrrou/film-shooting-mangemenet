  transition: all 0.3 ease;
  cursor: pointer;
  font-size: 16px;
}

form button:hover{
    background-color:#008000;
}

form a{
  font-family: "Roboto", sans-serif;
  text-transform: uppercase;
  outline: 0;
  background: #4CAF50;
  width: 100%;
  border: 0;
  border-radius: 15px;
  padding: 15px;
  color: #FFFFFF;
  font-size: 14px;
  -webkit-transition: all 0.3 ease;
  transition: all 0.3 ease;
  cursor: pointer;
  text-align:center;
  font-size: 16px;
}

form .btn:hover{
    background-color:#008000;
}


/* Styles supplémentaires pour le bouton lorsqu'il est survolé */
form button:hover ,form button:active,form button:focus {
