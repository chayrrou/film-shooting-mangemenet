form .btn{
  margin-left:10px;
}
form img{
  border-radius:30px;
}
h3{
    font-family: 'Nunito';
    font-size: 20px;
    margin-left:10px;
    padding-left:10px;
    border: 5px solid blue;
    border-top: 0px;
    border-bottom: 0px;
    border-right: 0px;
    width:100%;
}
strong{
   font-family: 'Nunito';
    font-size: 23px;
}
