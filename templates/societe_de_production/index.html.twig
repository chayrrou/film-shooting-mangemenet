{% extends 'base.html.twig' %}

{% block title %}SocieteDeProduction index{% endblock %}

{% block body %}
<style>
  .table {
  width: 500px;
  border-collapse: collapse;
  background-color:   #FFFFFF;
  border: 1px solid #ccc;
  padding: 20px;
  box-shadow: -5px 5px 10px rgba(0,0,0,0.7),
              5px 5px 10px rgba(0,0,0,0.7);
               
}

.table th,
.table td {

  padding: 15px;
  text-align: center;
  border-bottom: 1px solid #ddd;
}

.table th {
  background-color: #f2f2f2;
}

.btn {
  display: inline-block;
  padding: 6px 12px;
  background-color: dodgerblue;
  color: white;
  text-decoration: none;
  border-radius: 15px;
  margin-right: 4px;
  width:100px;
 margin:3%;
 font-size:15px;
}

.btn:hover {
  background-color: blue;
  font-size:20px;
}

.btnAction{
     display: flex;
  justify-content: center;
  align-items: center;
}

h1{
    margin-top:5%;
    font-family: 'Nunito';
    font-size: 35px;
    margin-left:35%;
    margin-bottom:5%;
    padding-left:10px;
    border: 5px solid tomato;
    border-top: 0px;
    border-bottom: 0px;
    border-right: 0px;
    width:100%;
    color:white;
}
.buttonCreate {
    display: inline-block;
    padding: 10px 20px;
    background-color: tomato;
    color: white;
    text-decoration: none;
    border-radius: 20px;
    margin: 10px;
    font-family: 'Nunito';
    text-align:center;
    font-size:20px;
    width:20%
}
.buttonCreate :hover {
  background-color: #45a049;
}
</style>
<div style="margin-left:20%">
    <h1>SocieteDeProduction </h1>
    <a style="margin-left:100%;box-shadow: -5px 5px 10px rgba(0,0,0,0.7),
              5px 5px 10px rgba(0,0,0,0.7)" href="{{ path('app_societe_de_production_new') }}" class="buttonCreate">Create Societe</a>
    <table class="table" style="margin-top:3%; margin-left:20%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for societe_de_production in societe_de_productions %}
            <tr>
                <td>{{ societe_de_production.id }}</td>
                <td>{{ societe_de_production.nom }}</td>
                <td>{{ societe_de_production.adresse }}</td>
                <td>
                    <a href="{{ path('app_societe_de_production_show', {'id': societe_de_production.id}) }}" class="btn">show</a>
                    <a href="{{ path('app_societe_de_production_edit', {'id': societe_de_production.id}) }}" class="btn">edit</a>
                    {{ include('societe_de_production/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                 <td colspan="4">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
</div>
{% endblock %}
