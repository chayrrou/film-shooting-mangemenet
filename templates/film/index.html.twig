{% extends 'base.html.twig' %}

{% block title %}Film index{% endblock %}

{% block body %}
<style>

.table {
  width: 100%;
  border-collapse: collapse;
  background-color:   #FFFFFF;
  border: 1px solid #ccc;
  padding: 20px;
  box-shadow: -5px 5px 10px rgba(0,0,0,0.7),
              5px 5px 10px rgba(0,0,0,0.7);
             
}

.table th,
.table td {
  padding: 5px;
  text-align: center;
  border-bottom: 1px solid #ddd;
}

.table th {
  background-color: #f2f2f2;
  padding:15px;
}

.btn {
  display: inline-block;
  padding: 6px 12px;
  background-color: dodgerblue;
  color: white;
  text-decoration: none;
  border-radius: 15px;
  margin-right: 4px;
  width:100px;
  margin:3%;
 font-size:15px;
}

.btn:hover {
  background-color: blue;
  font-size:20px;
}

.btnAction{
  display: flex;
  justify-content: center;
  align-items: center;
}

h1{
    margin-top:5%;
    font-family: 'Nunito';
    font-size: 35px;
    margin-left:60%;
    padding-left:10px;
    border: 5px solid tomato;
    border-top: 0px;
    border-bottom: 0px;
    border-right: 0px;
    width:100%;
    color:white;
}
.buttonCreate {
    display: inline-block;
    padding: 10px 20px;
    background-color: tomato;
    color: white;
    text-decoration: none;
    border-radius: 20px;
    margin: 10px;
    font-family: 'Nunito';
    text-align:center;
    font-size:20px;
    width:20%
}
.buttonCreate :hover {
  background-color: #45a049;
}

.profile-image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  object-fit: cover;
}

</style>
<div>
    <h1>Film </h1>
    <a style="margin-left:98%;box-shadow: -5px 5px 10px rgba(0,0,0,0.7),
              5px 5px 10px rgba(0,0,0,0.7);" href="{{ path('app_film_new') }}" class="buttonCreate">Create Film</a>
    <table class="table" style="margin-top:3%; margin-left:18%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Photo</th>
                <th>Genre</th>
                <th>Langue</th>
                <th>TypeDeTournage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <td>{{ film.id }}</td>
                <td>{{ film.titre }}</td>
                <td>
                    <img src={{asset('uploads/' ~ film.photo)}} width="50%" class="profile-image" />
                </td>
                <td>{{ film.genre }}</td>
                <td>{{ film.langue }}</td>
                <td>{{ film.typeDeTournage }}</td>
                <td>
                    <a href="{{ path('app_film_show', {'id': film.id}) }}" class="btn">show</a>
                    <a href="{{ path('app_film_edit', {'id': film.id}) }}" class="btn">Edit</a>
                    {{ include('film/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                  <td colspan="4">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  
</div>
{% endblock %}
